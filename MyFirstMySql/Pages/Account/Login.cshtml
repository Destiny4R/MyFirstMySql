@page
@model MyFirstMySql.Pages.Account.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mannat Themes">
    <meta name="keyword" content="">

    <title>Test | School Login</title>

    <!-- Theme icon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- Theme Css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/style.css" rel="stylesheet">
    <link href="~/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
</head>

<body class="sticky-header">
    <section class="bg-login">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-sm-12">
                    <div class="wrapper-page">
                        <div class="account-pages">
                            <div class="account-box">
                                <div class="card m-b-30">
                                    <div class="card-body">
                                        <div class="card-title text-center">
                                            <img src="~/assets/images/Logo/coatofArms.jpg" width="80" alt="" class="">
                                            <h5 class="mt-3"><b>Welcome to School Portal</b></h5>
                                        </div>
                                        <form class="form mt-5 contact-form" method="post">
                                            <div class="form-group ">
                                                <div class="col-sm-12">
                                                    <input class="form-control form-control-line" asp-for="Username" placeholder="Username or Reg Number" required="required">
                                                    <span asp-validation-for="Username" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <div class="col-sm-12">
                                                    <input class="form-control form-control-line" asp-for="Password" placeholder="Password" required="required">
                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-12">
                                                    <label class="cr-styled" asp-for="RememberMe">
                                                        <input type="checkbox" asp-for="RememberMe">
                                                        <i class="fa"></i>
                                                        @Html.DisplayNameFor(m=>m.RememberMe)
                                                    </label>
                                                </div>
                                            </div>
                                            @if (TempData["error"] != null)
                                            {
                                                <div class="alert alert-danger">
                                                    @TempData["error"]
                                                </div>
                                            }
                                            <div asp-validation-summary="All" class="text-danger"></div>
                                            <div class="form-group">
                                                <div class="col-sm-12 mt-4">
                                                    <button class="btn btn-primary btn-block" type="submit">Log In</button>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-sm-12 mt-4 text-center">
                                                    <a href="recoverpw.html"><i class="fa fa-lock m-r-5"></i> Forgot password?</a>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- jQuery -->
    <script src="~/assets/js/jquery-3.2.1.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
