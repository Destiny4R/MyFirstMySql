@page
@model MyFirstMySql.Pages.Admin.Admission.IndexModel
@{
    ViewData["Title"] = "Students List";
}
<br />
<div class="container-fluid">
    <div class="row d-flex justify-content-between">
        <div class="col-md-4">
            <h3><span class="h5">Student Management List</span></h3>
        </div>
        <div class="col-md-4">
            <a asp-page="AddNewStudent" class="btn btn-info form-control">
                <i class="glyphicon glyphicon-plus "></i>
                Register new Student
            </a>
        </div>
    </div>
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["success"]
        </div>
    }
    <div class="row mt-3">
        <div class="col-md-12">
                    <div class="justify-content-center">
                <table id="subjectTable" class="table table-striped table-hover table-responsive-sm text-3" width="100%">
                            <thead class="">
                                <tr>
                                    <th>Surname</th>
                                    <th>First Name</th>
                                    <th>Other Name</th>
                                    <th>Student Reg. Number</th>
                                    <th>Gender</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/js/studentTable.js"></script>
}
