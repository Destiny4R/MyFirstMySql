@page
@model MyFirstMySql.Pages.Admin.TermRegistration.IndexModel
@{
    ViewData["Title"] = "Students Term Reg List";
}
<br />
<div class="container-fluid">
    <div class="row d-flex justify-content-between">
        <div class="col-md-4">
            <h5><span class="bg-warning">Student Term Registration List</span></h5>
        </div>
        <div class="col-md-4">
            <a asp-page="RegisterStudent" class="btn btn-secondary form-control"><i class="fa fa-plus-square"></i>&nbsp; Register Student For The Term</a>
        </div>
    </div>
    @if (TempData["success"] != null || TempData["error"]!=null)
    {
        <div class="alert alert-success mt-3">@TempData["success"]</div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["error"]</div>
    }
    <div class="mt-3">
            <table id="subjectTable" class="table" >
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>Surname</th>
                        <th>Other Name</th>
                        <th>First Name</th>
                        <th>Student Reg. Number</th>
                        <th>Session/Year</th>
                        <th>Term</th>
                        <th>Class</th>
                        <th>Sub Class</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
    </div>
</div>
@section Scripts{
    <script src="~/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/js/studentTermTable.js"></script>
}