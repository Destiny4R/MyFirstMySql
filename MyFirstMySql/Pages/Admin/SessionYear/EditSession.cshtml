@page
@model MyFirstMySql.Pages.Admin.SessionYear.EditSessionModel
@{
    ViewData["Title"] = "Edit Class";
}

<form method="post" class="mt-3">
    <div class="container-fluid">
        <h3 class="text-center h3">Edit Class</h3>
      
        <div class="row mt-2">
            <div class="col-md-8 offset-md-2">
                <input asp-for="session.Id" hidden />
                <div class="row">
                    <label asp-for="session.Name" class="col-md-4 h6 text-dark">Class Name</label>
                    <div class="col-md-8">
                        <input asp-for="session.Name" class="form-control" />
                        <span asp-validation-for="session.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row d-flex justify-content-between">
                    <div class="col-md-4 m-3">
                        <button type="submit" class="btn btn-primary form-control">Update Session</button>
                    </div>
                    <div class="col-md-4 m-3">
                        <a asp-page="Index" class="btn btn-info form-control">Back to Session/Year List</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
