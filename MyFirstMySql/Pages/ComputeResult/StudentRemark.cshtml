@page
@model MyFirstMySql.Pages.ComputeResult.StudentRemarkModel
@{
    ViewData["Title"] = "Edit Position Remark";
}

<div class="mt-3">
    <div class="d-flex justify-content-between">
        <div class="badge bg-dark"><code class="h4">Edit Student Remark and Position</code></div>
        <a class=" btn btn-secondary" asp-page="Index">Back To list Page</a>
    </div>
    <form method="post">
        <input asp-for="remark.Id" hidden />
        <div class="row">
            <div class="col-md-4 mb-3">
                <strong>Full Name:</strong>
                <input asp-for="Fullname" readonly class="form-control editable-disabled" required />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <strong>Student Registran Number</strong>
                <input asp-for="StudentRegNo" readonly class="form-control editable-disabled" required />
                <span asp-validation-for="StudentRegNo" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <strong>Position In Class</strong>
                <input asp-for="remark.Position_In_Class" class="form-control" required />
                <span asp-validation-for="remark.Position_In_Class" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <strong for="validationCustom01">Term</strong>
                <input asp-for="term" readonly class="form-control editable-disabled" required />
                <span asp-validation-for="term" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <strong for="validationCustom02">Session/Year</strong>
                <input asp-for="session" readonly class="form-control editable-disabled" required />
            </div>
            <div class="col-md-4 mb-3">
                <strong for="validationCustom02">Class</strong>
                <input asp-for="classes" readonly class="form-control editable-disabled" required />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-3">
                <strong for="validationCustom01">Sub Class</strong>
                <input asp-for="subclass" readonly class="form-control editable-disabled" required />
                <span class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3">
                <strong for="validationCustom02">Student Attendance</strong>
                <input asp-for="remark.Student_Attendance" class="form-control" required />
                <span asp-validation-for="remark.Student_Attendance" class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3">
                <strong for="validationCustom02">Absent</strong>
                <input asp-for="remark.Absent" class="form-control" required />
                <span asp-validation-for="remark.Absent" class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3 tinymce-wrap">
                <strong for="validationCustom02">Total Mark Obtain</strong>
                <input asp-for="remark.Total_Marks_Obtain" class="form-control" required />
                <span asp-validation-for="remark.Total_Marks_Obtain" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <strong for="validationCustom02">General Remark</strong>
                <input asp-for="remark.General_Remark" class="form-control" list="state" />
                <datalist class="" id="state">
                    <option value="Brilliant Result, absolutely exceptional keep it up">Brilliant Result, absolutely exceptional keep it up</option>
                    <option value="Excellent Result Keep the Fire in You Burning">Excellent Result Keep the Fire in You Burning</option>
                    <option value="Very Good Result, I believe You Can Even Do Much More Better Than This. Weldone!">Very Good Result, I believe You Can Even Do Much More Better Than This. Weldone!</option>
                    <option value="Good Result But Put In More And Better Effort To Achieve More. Weldone!">Good Result But Put In More And Better Effort To Achieve More. Weldone!</option>
                </datalist>
                <span asp-validation-for="remark.General_Remark" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <strong for="validationCustom02">Principal Remark</strong>
                <input asp-for="remark.Principal_Remark" class="form-control" list="state" />
                <datalist class="" id="state">
                    <option value="Brilliant Result, absolutely exceptional keep it up">Brilliant Result, absolutely exceptional keep it up</option>
                    <option value="Excellent Result Keep the Fire in You Burning">Excellent Result Keep the Fire in You Burning</option>
                    <option value="Very Good Result, I believe You Can Even Do Much More Better Than This. Weldone!">Very Good Result, I believe You Can Even Do Much More Better Than This. Weldone!</option>
                    <option value="Good Result But Put In More And Better Effort To Achieve More. Weldone!">Good Result But Put In More And Better Effort To Achieve More. Weldone!</option>
                </datalist>
                <span asp-validation-for="remark.Principal_Remark" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-between mt-2">
            <input type="submit" class="btn btn-primary" value="Update Record" />
            <a class="btn btn-info" asp-page="Index">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
