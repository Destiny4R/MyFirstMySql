@page
@model MyFirstMySql.Pages.ComputeResult.UploadResultModel
@{
    ViewData["Title"] = "Compute Result";
}
<div class="text-center">
    <div class="d-flex justify-content-between mt-3">
        <div class=" text-dark text-uppercase"><strong class="h5">Add Result Using Excel File</strong></div>
        <a class="btn btn-info" asp-page="AddResult"><i class="fa fa-plus-square"></i>&ensp; Add Single</a>
    </div>
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success mt-2">
            @TempData["success"]
        </div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger mt-2">
            @TempData["error"]
        </div>
    }@if (TempData["error2"] != null)
    {
        <div class="alert alert-danger mt-2">
            @TempData["error2"]
        </div>
    }
    <form method="post" enctype="multipart/form-data">
        <div class="row mt-3">
            <div class="col-12">
                <div class="form-group row">
                <label asp-for="term" class="col-form-label col-md-3">Term</label>
                <div class="col-md-7">
                    <select asp-for="term" class="form-control custom-select d-block w-100">
                        <option value="" disabled selected>---Select Term---</option>
                        <option value="First">First</option>
                        <option value="Second">Second</option>
                        <option value="Third">Third</option>
                    </select>
                    <span asp-validation-for="term" class="text-danger"></span>
                </div>
            </div>
            </div>
            <div class="col-12">
                <div class="row form-group">
                <label asp-for="session" class="col-form-label col-sm-3">Session/Year</label>
                <div class="col-sm-7">
                    <select class="form-control custom-select d-block w-100" asp-for="session" asp-items="@Model.ViewSelectModel.SessionYearz">
                        <option disabled selected>---Select Session/Year---</option>
                    </select>
                    <span asp-validation-for="session" class="text-danger"></span>
                </div>
            </div>
            </div>
            <div class="col-12">
                <div class="row form-group">
                <label asp-for="classes" class="col-3 col-form-label">Class</label>
                <div class="col-7">
                    <select class="form-control custom-select d-block w-100" asp-for="classes" asp-items="@Model.ViewSelectModel.Class">
                        <option disabled selected>---Select Class---</option>
                    </select>
                    <span asp-validation-for="classes" class="text-danger"></span>
                </div>
            </div>
            </div>
            <div class="col-12">
                <div class="row form-group">
                <label asp-for="subclass" class="col-3 col-form-label">Sub Class</label>
                <div class="col-md-7">
                    <select asp-for="subclass" class="form-control custom-select d-block w-100" asp-items="@Model.ViewSelectModel.SubClass">
                        <option value="" disabled selected>---Select Sub-Class---</option>
                    </select>
                    <span asp-validation-for="subclass" class="text-danger"></span>
                </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <div class="input-group mt-2">
                    <input type="file" class="form-control" required id="file" name="file" />
                    <span class="input-group-append">
                        <button type="submit" asp-page-handler="Search" class="btn btn-success btn-block">
                            <l class="fa fa-upload"> Upload File</l>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </form>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
