@page
@model MyFirstMySql.Pages.ComputeResult.IndexModel
@{
    ViewData["Title"] = "Class Result List";
}
<div class="text-center">
    <div class="d-flex justify-content-between mt-3">
        <div class=" text-dark text-uppercase"><strong class="h5">Result Computation</strong></div>
        <a class="btn btn-info" asp-page="Index"><i class="fa fa-angle-left"></i>&ensp; Back to List</a>
    </div>
    <div class="row mt-3">
        <div class="col-md-6 card">
            <div class="mt-2 mb-2">
                <strong>Add and manage result</strong>
            </div>
            <div class="btn-group">
                <a class="btn btn-info" asp-page="/ComputeResult/AddResult"><i class="fa fa-plus-square"></i>&ensp; Add Result</a>
                <a class="btn btn-secondary" asp-page="/ComputeResult/UploadResult"><i class="fa fa-upload"></i>&ensp; Upload Excel File</a>
                <a class="btn btn-warning disabled" asp-page="/ComputeResult/EditResult"><i class="fa fa-pencil-square-o"></i>&ensp; Edit Result</a>
            </div>
        </div>
        <div class="col-md-6 card">
            <div class="mt-2 mb-2">
                <strong>Assign Position in subjects and Class, Result Remark</strong>
            </div>
            <div class="btn-group">
                <a class="btn btn-success" asp-page="PositionInSubject"><i class="fa fa-signing"></i>&ensp;Position Subject</a>
                <a class="btn btn-primary" asp-page="PositionInClass"><i class="fa fa-plus-square-o"></i>&ensp;Position In Class</a>
                <a class="btn btn-light" asp-page="/TermClassInformation/Index"><i class="fa fa-signing"></i>&ensp;Class general Info.</a>
            </div>
        </div>
    </div>
    @if (TempData["search"] != null)
    {
        <div class="alert alert-success mt-2">
            @TempData["search"]
        </div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger mt-2">
            @TempData["error"]
        </div>
    }
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success mt-2">
            @TempData["success"]
        </div>
    }
    <form method="post">
        <div class="row mt-3">
            <div class="col-md-2">
                <div class="form-group">
                    <text>Term</text>
                    <input asp-for="term" class="form-control form-custom-sm" readonly />
                    <span asp-validation-for="term" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <text>Session/Year</text>
                    <input asp-for="session" class="form-control form-custom-sm" readonly />
                    <span asp-validation-for="session" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <text for="subject">Class</text>
                    <input asp-for="classes" class="form-control form-custom-sm" readonly />
                    <span asp-validation-for="classes" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <text class="">Sub Class</text>
                    <input asp-for="subclass" class="form-control form-custom-sm" readonly />
                    <span asp-validation-for="subclass" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group mt-3">
                    <input asp-for="StudentRegNo" class="form-control" placeholder="Search reg number" aria-label="Search for..." />
                    <span class="input-group-append">
                        <button type="submit" asp-page-handler="Search" class="btn btn-success btn-block">
                            <l class="fa fa-search"> search</l>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="mt-3">
    <table id="subjectTable" class="table">
        <thead>
            <tr>
                <th>S/N</th>
                <th>Surname</th>
                <th>Other Name</th>
                <th>First Name</th>
                <th>Student Reg. Number</th>
                <th>Session/Year</th>
                <th>Term</th>
                <th>Class</th>
                <th>Sub Class</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/js/studentreginclass.js"></script>
}